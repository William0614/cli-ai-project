# Image Classifier Configuration
# Set USE_OPENAI_VISION to "true" to use OpenAI API, "false" or unset for local model
USE_OPENAI_VISION=true

# Required only if using OpenAI
# OPENAI_API_KEY=your_openai_api_key_here

# Local server configuration (used when USE_OPENAI_VISION=false)
LOCAL_API_URL=http://localhost:8002/v1/chat/completions
LOCAL_MODEL_NAME=Qwen/Qwen2.5-VL-3B-Instruct
LOCAL_SERVER_PORT=8887

# Debug Features (Optional)
# Set to 'true' to enable detailed prompt debugging with token counts
# Shows complete system prompts and user messages sent to LLM
DEBUG_PROMPTS=false

# Example Usage:
# DEBUG_PROMPTS=true python main.py
# or export DEBUG_PROMPTS=true
